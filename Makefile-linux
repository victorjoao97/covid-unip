SRC_DIR := ./
OBJ_DIR := ./obj/Release
SRC_FILES := $(wildcard $(SRC_DIR)/*.c)
OBJ_FILES := $(patsubst $(SRC_DIR)/%.c,$(OBJ_DIR)/%.o,$(SRC_FILES))
LDFLAGS :=
CPPFLAGS :=
CXXFLAGS :=

main: $(OBJ_FILES)
   gcc $(LDFLAGS) -o $@ $^

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c
   gcc $(CPPFLAGS) $(CXXFLAGS) -c -o $@ $<
